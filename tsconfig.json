{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "target": "es6",
     "module": "commonjs",
     "moduleResolution": "node",
     "rootDir": "./src",
     "outDir": "./build",
     "baseUrl": "./build",
     "removeComments": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true
  },
  "include": [
     "src/**/*"
  ],
  "exclude": [
     "node_modules",
     "**/*.spec.ts"
 ]
}